<div class="user-info clear-fix" style="display: flex; align-items: center;">
  <img src="<%= userInfo.picture %>" class="avatar float-left" alt="" style="width: 80px; height: 80px; border-radius: 50%;">
  <h4 class="user-name"><%= userInfo.nickName %></h4>
</div>

<% if(isMe) { %>
<div class="bold" style="margin-top: 10px;">
  <a href="/at-me">
    @提到我的 (<%= locals.atCount %>)
  </a>
</div>
<% } else { %>
<div style="margin-top: 10px;">
  <button>关注/取消关注</button>
</div>
<% } %>

<script>
  $(function () {
    // 当前用户 id
    var curUserId = <%= userInfo.id %>;

    // 按钮显示与隐藏
    var $btnFollow = $('#btn-follow')
    var $btnUnFollow = $('#btn-un-follow')
    // if (<%= !isMe %>) {
    //   if (<%= locals.amIFollowed %>) {
    //     $btnFollow.show()
    //   } else {
    //     $btnUnFollow.show()
    //   }
    // }

    // 取消关注
    $btnUnFollow.click(function() {
      if(confirm('确定取消关注吗？') === false) {
        return
      }
      ajax.post('/api/profile/unFollow', {
          userId: curUserId
        }, function(err) {
          if(err) {
            alert(err)
            return
          }
          // 取消成功
          $btnFollow.show()
          $btnUnFollow.hide()
      })
    })
  })
</script>